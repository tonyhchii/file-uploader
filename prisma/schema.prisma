generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String // MediumText may be needed for MySql
  expiresAt DateTime
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String?
  username String   @unique
  password String
  folder   folder[]
}

model folder {
  id     Int    @id @default(autoincrement())
  name   String
  user   User?  @relation(fields: [userId], references: [id])
  userId Int?
  file   file[]
}

model file {
  id   Int    @id @default(autoincrement())
  name String

  folder   folder? @relation(fields: [folderId], references: [id])
  folderId Int?
}
