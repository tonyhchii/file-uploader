<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title></title>
  <link rel="stylesheet" href="index.css">
</head>

<body>
  <div class="header flex">
    <div class="header-left">
      <h1>File Upload Site</h1>
    </div>
    <div class="header-right">
      <% if(!locals.user) {%>
      <a href="/log-in">Log In</a><a href="/sign-up">Sign Up</a>
      <% } else { %>
      <p>Welcome <%= locals.user.username %></p>
      <a href="/log-out">Log Out</a>
      <% } %>
    </div>
  </div>
  <div class="body">
    <a href="/create">Create Folder</a>
    <% if(locals.folders)  {%>
    <ul>
      <% folders.forEach((folder) => { %>
      <li><a><%= folder.name  %></a></li>
      <% }) %>
    </ul>
    <% } %>
  </div>

</body>

</html>